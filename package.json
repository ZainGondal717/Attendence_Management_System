{
  "name": "blockchain-attendance-management-system",
  "version": "1.0.0",
  "description": "Multi-layered Blockchain-Based Attendance Management System",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "seed": "node backend/seed.js",
    "client": "cd frontend && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "cd frontend && npm install && npm run build",
    "install": "cd frontend && npm install"
  },
  "keywords": [
    "blockchain",
    "attendance",
    "nodejs",
    "react"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "crypto": "^1.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}
